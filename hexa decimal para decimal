#include<stdio.h>
int conversor(char hexadecimal[]) {
	int valordecimal = 0;
	int i;
	for(i = 0; i < 2; i++) {
		if(hexadecimal[i] >= '0' && hexadecimal[i] <= '9') {
			if(i == 0) {
			valordecimal += (hexadecimal[i] - '0') * 16;
		    } else {
		    	valordecimal += (hexadecimal[i] - '0');
			}
		} else if(hexadecimal[i] >= 'A' && hexadecimal[i] <= 'F') {
			if(i == 0) {
			valordecimal += (hexadecimal[i] - 'A' + 10) * 16;
		    } else {
		    	valordecimal += (hexadecimal[i] - 'A' + 10);
			}
		}
	}
	return valordecimal;
}

int main() {
    char mensagem[101];
    char hex[3];
    int i;
    char resultado;

    printf("Digite o valor de b: ");
    scanf("%d", &b);

    printf("Digite a mensagem: ");
    scanf("%100s", mensagem);

    for(i = 0; i < strlen(mensagem); i += 2) {
            hex[0] = mensagem[i];
            hex[1] = mensagem[i + 1];
            resultado = conversor(hex);
            printf("%c", resultado);    
    }

    return 0;
}
